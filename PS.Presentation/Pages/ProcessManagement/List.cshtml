@page
@model PS.Presentation.Pages.ProcessManagement.ListModel
@{
}
<div class="card">
    <div class="card-header">
        <h3 class="float-left">Article Category List</h3>
        <div class="float-right">
            <a class="btn btn-success" asp-page="/ProcessManagement/Add" asp-area="Administrator">Add New</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Burst Time</th>
                    <th>Arrival Time</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var process in Model.processes)
                {
                    <tr>
                        <td>@process.Id</td>
                        <td>@process.BurstTime</td>
                        <td>@process.ArrivalTime</td>
                        <td class="d-flex">
                            <form method="post" asp-page-handler="Remove" class="float-left mx-2">
                                    <button class="btn btn-danger">Remove</button>
                                <input type="hidden" name="id" value="@process.Id" />
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<br />
<br />
<br />
<br />
<div class="container">
    <form method="post" asp-page-handler="Simulate" class="float-left">
        <select name="algo" id="algo" class="form-control">
            <option value="0">Select Article Category class="disabled"</option>
            <option value="FCFS">FCFS</option>
            <option value="JSF">JSF</option>
            <option value="RN">Round Robin</option>
        </select>
        <button class="btn btn-success">simulate</button>
    </form>
</div>